        <p>¬© 2024 –ü—É—Ç–µ–≤–æ–¥–∏—Ç–µ–ª—å –ø–æ –æ–ª–∏–º–ø–∏–∞–¥–∞–º | –û–±–Ω–æ–≤–ª–µ–Ω–æ: —è–Ω–≤–∞—Ä—å 2024</p>
        <p>–ù–∞—à–ª–∏ –æ—à–∏–±–∫—É? –•–æ—Ç–∏—Ç–µ –¥–æ–±–∞–≤–∏—Ç—å –æ–ª–∏–º–ø–∏–∞–¥—É? <a href="https://github.com/–≤–∞—à-–ª–æ–≥–∏–Ω/olympiad-guide/issues" target="_blank">–°–æ–æ–±—â–∏—Ç–µ –Ω–∞–º</a></p>
    </footer>

    <script>
        // –ü—Ä–æ—Å—Ç–æ–π –ø–æ–∏—Å–∫ –ø–æ –æ–ª–∏–º–ø–∏–∞–¥–∞–º
        document.getElementById('search').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const olympiads = document.querySelectorAll('.olympiad');
            
            olympiads.forEach(olympiad => {
                const text = olympiad.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    olympiad.style.display = 'block';
                } else {
                    olympiad.style.display = 'none';
                }
            });
        });
        
        // –§–∏–ª—å—Ç—Ä–∞—Ü–∏—è –ø–æ —É—Ä–æ–≤–Ω—è–º
        const levelFilters = document.querySelectorAll('.level-filter');
        levelFilters.forEach(filter => {
            filter.addEventListener('change', filterOlympiads);
        });
        
        function filterOlympiads() {
            const selectedLevels = Array.from(levelFilters)
                .filter(f => f.checked)
                .map(f => f.value);
                
            const olympiads = document.querySelectorAll('.olympiad');
            
            olympiads.forEach(olympiad => {
                const level = olympiad.classList.contains('level-1') ? '1' :
                              olympiad.classList.contains('level-2') ? '2' : '3';
                              
                if (selectedLevels.includes(level)) {
                    olympiad.style.display = 'block';
                } else {
                    olympiad.style.display = 'none';
                }
            });
        }
    </script>
